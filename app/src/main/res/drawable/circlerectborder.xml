<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景色 -->
    <solid android:color="#87eb99" />
    <!-- 设置边框 -->
    <stroke
        android:width="2px"
        android:color="#001eff" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:radius="50px"/>
    <!-- 设置边距 -->
    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp" />
</shape>